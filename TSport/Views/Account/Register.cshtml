@model TSport.ViewModels.SignupViewModel
@{
    ViewData["Title"] = "Register";
}
<!--== Start Page Header Area Wrapper ==-->
<div class="page-header-area" data-bg-img="../assets/img/photos/bg3.webp">
    <div class="container pt--0 pb--0">
        <div class="row">
            <div class="col-12">
                <div class="page-header-content">
                    <h2 class="title" data-aos="fade-down" data-aos-duration="1000">Register</h2>
                    <nav class="breadcrumb-area" data-aos="fade-down" data-aos-duration="1200">
                        <ul class="breadcrumb">
                            <li><a href="index.html">Home</a></li>
                            <li class="breadcrumb-sep">//</li>
                            <li>Register</li>
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>
<!--== End Page Header Area Wrapper ==-->
<!--== Start My Account Area Wrapper ==-->
<section class="account-area">
    <div class="container">
        <div class="row">
            <div class="col-sm-8 m-auto">
                <div class="section-title text-center">
                    <h2 class="title">Register</h2>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="register-form-content">
                    <form action="/account/register" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger text-center small"></div>
                        <div class="row">
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="username" asp-for="UserName">Username <span class="required">*</span></label>
                                    <input id="username" class="form-control" type="text" asp-for="UserName">
                                    <span asp-validation-for="UserName" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="email" asp-for="Email">Email address <span class="required">*</span></label>
                                    <input id="email" class="form-control" type="email" asp-for="Email">
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="password" asp-for="Password">Password <span class="required">*</span></label>
                                    <input id="password" class="form-control" type="password" asp-for="Password">
                                    <span asp-validation-for="Password" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group">
                                    <label for="confpassword" asp-for="ConfirmPass">Confirm Password <span class="required">*</span></label>
                                    <input id="confpassword" class="form-control" type="password" asp-for="ConfirmPass">
                                    <span asp-validation-for="ConfirmPass" class="text-danger small"></span>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-group mb--0">
                                    <input class="btn-register" value="Register" type="submit"/>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!--== End My Account Area Wrapper ==-->